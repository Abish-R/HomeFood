<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/default_padding"
    android:background="@color/white_different"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/small_padding"
    android:paddingTop="@dimen/small_padding">

    <CheckBox
        android:id="@+id/cb_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/small_padding"
        android:layout_marginLeft="@dimen/default_padding"
        android:layout_marginRight="@dimen/small_padding"
        android:layout_marginStart="@dimen/default_padding" />

    <TextView
        android:id="@+id/tv_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/small_padding"
        android:layout_marginRight="@dimen/small_padding"
        android:layout_toEndOf="@+id/cb_address"
        android:layout_toLeftOf="@+id/ib_edit_address"
        android:layout_toRightOf="@+id/cb_address"
        android:layout_toStartOf="@+id/ib_edit_address"
        tools:text="Address Line 1,
Address Line 2,
Address Line 3,
Address Line 4,
Address Line 5" />

    <ImageButton
        android:id="@+id/ib_edit_address"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/default_padding"
        android:layout_marginRight="@dimen/default_padding"
        android:layout_toLeftOf="@+id/ib_delete_address"
        android:layout_toStartOf="@+id/ib_delete_address"
        android:background="@drawable/ic_edit"
        android:contentDescription="@null" />

    <ImageButton
        android:id="@+id/ib_delete_address"
        android:layout_width="40dp"
        android:layout_height="48dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/ic_delete_forever"
        android:contentDescription="@null" />

</RelativeLayout>